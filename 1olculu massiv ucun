#include <iostream>
using namespace std;

void hesabla1D(int massiv[], int uzunluq) {
    int cem = 0;
    int hasil = 1;
    int max = massiv[0];
    int min = massiv[0];

    for(int i = 0; i < uzunluq; i++) {
        cem += massiv[i];
        hasil *= massiv[i];
        if(massiv[i] > max) max = massiv[i];
        if(massiv[i] < min) min = massiv[i];
    }

    cout << "Cem: " << cem << endl;
    cout << "Hasil: " << hasil << endl;
    cout << "Maksimum: " << max << endl;
    cout << "Minimum: " << min << endl;
}

int main() {
    int arr[] = {2, 5, 3, 7};
    int uzunluq = sizeof(arr)/sizeof(arr[0]);
    hesabla1D(arr, uzunluq);
    return 0;
}
